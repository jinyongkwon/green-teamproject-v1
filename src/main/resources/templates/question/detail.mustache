<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/common.css">
    <link rel="stylesheet" href="/css/post.css">
</head>

<body>
    <input type="hidden" id="questionId" value="{{question.id}}">
    <div class="box-all box-post-bg">
        <div class="container">
            <div class="d-flex justify-content-between ">
                <a href="/s/question/list/{{principal.id}}">
                    <div class="mt-3 header-btn-font">내가 쓴글 보기</div>
                </a>
                <a href="/s/question/writeForm">
                    <div class="mt-3 header-btn-font">건의하기</div>
                </a>
            </div>
            <div class="full  mt-3">
                <input type="text" class="form-control" value="{{question.title}}" readonly>
            </div>
            <textarea name="content" class="full mt-3" rows="6" readonly>{{question.content}}</textarea>
            {{#question.file}}
            <div class="full">
                <button id="btn-checkImg" class="full mt-3 btn btn-primary input-text">사진 확인하기</button>
            </div>
            {{/question.file}}
            {{#principal.manager}}
            <form action="/s/question/{{question.id}}/list/comment" method="post">
                <textarea name="content" class="full mt-3" rows="4"></textarea>
                <button class="full mt-3 btn btn-primary input-text">답글 달기</button>
            </form>
            {{/principal.manager}}
            {{^principal.manager}}
            {{#question.IsComment}}
            <textarea name="content" class="full mt-3" rows="4" readonly>{{question.comment.content}}</textarea>
            {{/question.IsComment}}
            {{/principal.manager}}
        </div>
    </div>
    </div>
</body>

<script>
    $("#btn-checkImg").click(() => {
        imgCheck();
    });

    let imgCheck = () => {
        let questionId = $("#questionId").val();
        window.open(`/s/question/checkImg/${questionId}`, '이미지', 'location=no,status=no,scrollbars=yes');
    }
</script>

</html>