    async function update(){
      let id = $("#id").text();
      console.log(id); 
      let object = {
        hp:  $("#hp").text(),
      }
      let response = await fetch(`/battle/update/${id}`, {
        method: "PUT",
        body: JSON.stringify(object),
        headers: {
          'Content-Type': 'application/json',
        },
      });
